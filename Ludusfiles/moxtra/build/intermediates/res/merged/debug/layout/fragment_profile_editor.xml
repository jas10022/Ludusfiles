<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/list_bg_color"
    android:clickable="true"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/fragment_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/form_padding" />

        <EditText
            android:id="@+id/edt_first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/form_padding"
            android:layout_marginRight="@dimen/form_padding"
            android:background="@drawable/input_top"
            android:hint="@string/First_Name"
            android:inputType="textPersonName"
            android:nextFocusDown="@+id/edt_last_name"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edt_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_middle"
            android:layout_marginLeft="@dimen/form_padding"
            android:layout_marginRight="@dimen/form_padding"
            android:hint="@string/Last_Name"
            android:inputType="textPersonName"
            android:gravity="center"
            android:nextFocusUp="@+id/edit_profile_phone"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_profile_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_middle"
            android:layout_marginLeft="@dimen/form_padding"
            android:layout_marginRight="@dimen/form_padding"
            android:hint="@string/Email"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:nextFocusUp="@+id/edit_profile_phone"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_profile_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bottom"
            android:layout_marginLeft="@dimen/form_padding"
            android:layout_marginRight="@dimen/form_padding"
            android:hint="@string/Phone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/form_padding" />
        
        <Button
	        android:id="@+id/btn_save"
	        style="@style/MoxBlueButtonStyle"
	        android:layout_width="200dp"
	        android:layout_height="50dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/Save"
	        android:textSize="17sp" />
        
    </LinearLayout>

</ScrollView><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/fragment_profile_editor.xml -->