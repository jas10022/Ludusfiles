<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/translucent_activity_bg">

    <LinearLayout
        android:layout_width="@dimen/coach_mark_down_textview_min_width"
        android:layout_height="wrap_content"
        android:layout_above="@+id/arrow_down"
        android:layout_alignRight="@+id/arrow_down"
        android:background="@drawable/coachmark_text_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Sharing"
            android:textColor="@android:color/white"
            android:id="@+id/label_title1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:text="@string/Share_your_document_and_screen_remotely"
            android:textColor="@android:color/white"
            android:id="@+id/label_subtitle1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coachmark_arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/coachmark_highlight"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:id="@+id/coachmark_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/coachmark_highlight" />

</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/coach_mark_03.xml -->