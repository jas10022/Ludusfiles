<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btn_facebook_login"
        style="@style/MoxFacebookButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Facebook"
        android:textColor="@color/moxtra_darkgray" />

    <Button
        android:id="@+id/btn_google_account_login"
        style="@style/MoxGoogleButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Google"
        android:textColor="@color/moxtra_darkgray"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_other_login"
        style="@style/MoxOtherButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/Other"
        android:textColor="@color/moxtra_darkgray"
        android:visibility="gone" />

</LinearLayout>
