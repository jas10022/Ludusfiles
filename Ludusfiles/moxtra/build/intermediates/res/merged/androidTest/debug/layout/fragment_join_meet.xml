<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/general_tiled_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.moxtra.binder.widget.ClearableEditText
            android:id="@+id/et_meet_number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:hint="@string/Meet_ID"
            android:inputType="number"
            android:digits="0123456789 "
            android:gravity="center"
            android:minWidth="260dp" />

        <Button
            android:id="@+id/btn_join_meet"
            style="@style/MoxOrangeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/et_meet_number"
            android:layout_alignRight="@id/et_meet_number"
            android:layout_below="@id/et_meet_number"
            android:layout_centerInParent="true"
            android:text="@string/Join_Meet" >
        </Button>
    </RelativeLayout>

</ScrollView><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/fragment_join_meet.xml -->