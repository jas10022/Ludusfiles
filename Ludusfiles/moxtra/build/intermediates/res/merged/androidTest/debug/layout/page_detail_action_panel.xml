<?xml version="1.0" encoding="utf-8"?>

<com.moxtra.binder.widget.PageDetailActionPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MX_PageDetail_ActionPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/page_detail_thumbnails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/page_detail_bar_background"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_close_thumbnails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/slide_down"
            android:background="@null" />

        <it.sephiroth.android.library.widget.HListView
            android:id="@+id/list_page_thumbnails"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_view_thumb_height" />

        <include layout="@layout/widget_text_font_menu" />
    </LinearLayout>

    <include layout="@layout/page_detail_main_toolbar" />

    <FrameLayout
        android:id="@+id/MX_PageDetail_Primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/page_detail_arrow_toolbar" />

        <include layout="@layout/page_detail_edit_toolbar" />

        <include layout="@layout/page_detail_color_picker" />

    </FrameLayout>

    <!--Secondary Panel 1-->
    <include layout="@layout/page_detail_secondary_panel_1" />

    <!--Secondary Panel 2-->
    <include layout="@layout/page_detail_secondary_panel_2" />

    <!-- Clip docker -->
    <include layout="@layout/clip_small_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</com.moxtra.binder.widget.PageDetailActionPanel><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/page_detail_action_panel.xml -->