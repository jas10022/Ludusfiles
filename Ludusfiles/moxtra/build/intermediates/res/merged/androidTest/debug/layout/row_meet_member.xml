<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/avatar_container">

        <com.moxtra.binder.widget.MXAvatarImageView
            android:id="@+id/iv_member_avatar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_gravity="center"
            mx:border_color="@android:color/white"
            mx:border_width="0dip"
            mx:round_background="true" />

        <CheckBox
            android:id="@+id/cb_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:layout_gravity="right|bottom"
            android:button="@drawable/stateful_member_check" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/avatar_container"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="@string/Unknown"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/row_meet_member.xml -->