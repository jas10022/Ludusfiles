<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/row_cell_padding"
    android:paddingRight="@dimen/row_cell_padding"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:id="@+id/layout_row_simple_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:adjustViewBounds="true"
        android:background="@drawable/input_middle" >

        <TextView
            android:id="@+id/tv_row_simple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="50"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_disclosure_row_simple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/list_tappable" />

        <TextView
            android:id="@+id/tv_row_provided_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_toLeftOf="@id/iv_disclosure_row_simple_text"
            android:layout_toRightOf="@id/tv_row_simple_text" />
    </RelativeLayout>

</FrameLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/row_simple_text.xml -->