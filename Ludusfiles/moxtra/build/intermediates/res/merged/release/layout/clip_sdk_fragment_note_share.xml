<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/general_background"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Moxtra Note is ready to save to your local Photo Library. Or share this public link with more people."
        android:drawableLeft="@drawable/play_button"/>

    <Button
        android:id="@+id/copy_link"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/sdk_blue_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Copy Public Link "/>

    <Button
        android:id="@+id/sms_link"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/sdk_blue_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="SMS Public Link "/>

    <Button
        android:id="@+id/email_link"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/sdk_blue_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Email Public Link "/>

