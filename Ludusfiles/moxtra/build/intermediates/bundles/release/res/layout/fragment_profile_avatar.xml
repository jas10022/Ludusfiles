<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moxtra="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_tiled_background"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10.0dip"
        android:clickable="true" >

        <com.moxtra.binder.widget.MXAvatarImageView
            android:id="@+id/iv_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            moxtra:border_color="@color/white"
            moxtra:border_width="0dp"
            moxtra:corner_radius="50dp"
            moxtra:round_background="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_take_photo"
        style="@style/MoxBlueButtonStyle"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/Take_Photo"
        android:background="@drawable/blue_flat_round_button"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_pick_photo"
        style="@style/MoxBlueButtonStyle"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/Choose_Picture"
        android:background="@drawable/blue_flat_round_button"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_delete_photo"
        style="@style/MoxBlueButtonStyle"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/Delete_Photo"
        android:background="@drawable/blue_flat_round_button"
        android:textSize="17sp" />

</LinearLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/fragment_profile_avatar.xml -->