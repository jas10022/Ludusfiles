<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moxtra="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_assignee_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/task_details_row_selector">

    <TextView
        android:id="@+id/tv_set_assignee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/task_details_row_selector"
        android:clickable="true"
        android:drawableLeft="@drawable/task_details_icon_assignee_default_selector"
        android:gravity="center_vertical"
        android:paddingRight="70dp"
        android:text="@string/Assign_to"
        android:textColor="@color/color_text_gray_darker"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18sp" />


    <com.moxtra.binder.widget.MXAvatarImageView
        android:id="@+id/riv_assignee_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_default_avatar2"
        moxtra:border_color="@android:color/darker_gray"
        moxtra:border_width="1dp"
        moxtra:corner_radius="20dp"
        moxtra:round_background="true" />


</RelativeLayout>
