<?xml version="1.0" encoding="utf-8"?>
<!--
	This xml defines common elements of header action bar in a dialog 
	which is presented full-screen on phone or popover on tablet
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@drawable/popview_navi_bar_bg"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_bar_left"
        style="@style/MoxBarGrayBackButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:shadowColor="@color/popover_title_shadow_color"
        android:shadowDx="5"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:textColor="@color/popover_title_color"
        android:textSize="@dimen/header_bar_title_size" />

    <Button
        android:id="@+id/btn_bar_right"
        style="@style/MoxBarRightButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/button_text_gray_bg"
        android:text="@string/Cancel"
        android:textSize="12sp" />

</FrameLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/layout_dialog_header_bar.xml -->