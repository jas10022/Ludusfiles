<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/viewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_index_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </ImageView>
        
        <ImageView
            android:id="@+id/iv_index1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_selected" >
        </ImageView>

        <ImageView
            android:id="@+id/iv_index2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot" >
        </ImageView>

        <ImageView
            android:id="@+id/iv_index3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot" >
        </ImageView>

        <ImageView
            android:id="@+id/iv_index4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot" >
        </ImageView>

        <ImageView
            android:id="@+id/iv_index_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" >
        </ImageView>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/action_bar_height"
        android:layout_above="@id/viewGroup"
        android:layout_alignParentTop="true" />
</RelativeLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/layout_guide_pages.xml -->