<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_black"
    tools:context="edu.self.ludus.CoachProfileInfo">

    <LinearLayout
        android:id="@+id/title"
        android:gravity="top|center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="70dp"
            android:textColor="@color/white"
            android:text="@string/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Space
        android:id="@+id/space"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_below="@+id/space"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/text_size"
            android:id="@+id/name"
            android:textColor="@color/white"
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/name"
            android:id="@+id/dash1"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:id="@+id/user_name"
            android:layout_toRightOf="@+id/dash1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/space2"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space2"
            android:id="@+id/sport"
            android:textColor="@color/white"
            android:text="@string/sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space2"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/sport"
            android:id="@+id/dash2"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space2"
            android:layout_toRightOf="@+id/dash2"
            android:id="@+id/user_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/space3"
            android:layout_below="@+id/sport"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space3"
            android:id="@+id/city"
            android:textColor="@color/white"
            android:text="@string/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space3"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/city"
            android:id="@+id/dash4"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space3"
            android:id="@+id/location"
            android:layout_toRightOf="@+id/dash4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/space5"
            android:layout_below="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space5"
            android:id="@+id/phone_number"
            android:textColor="@color/white"
            android:text="@string/Phone_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space5"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/phone_number"
            android:id="@+id/dash5"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space5"
            android:id="@+id/user_phone_number"
            android:layout_toRightOf="@+id/dash5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/space6"
            android:layout_below="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space6"
            android:id="@+id/user_email"
            android:textColor="@color/white"
            android:text="@string/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space6"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/user_email"
            android:id="@+id/dash6"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space6"
            android:id="@+id/email"
            android:layout_toRightOf="@+id/dash6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:id="@+id/space7"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space7"
            android:id="@+id/user_username"
            android:textColor="@color/white"
            android:text="@string/Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space7"
            android:textColor="@color/blue"
            android:layout_toRightOf="@+id/user_username"
            android:id="@+id/dash7"
            android:text="@string/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="hi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:layout_below="@+id/space7"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/dash7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
