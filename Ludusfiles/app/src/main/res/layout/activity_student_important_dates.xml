<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.self.ludus.StudentImportantDates"
    android:background="@drawable/background_black">

   <LinearLayout
       android:id="@id/title"
       android:gravity="top|center"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:textSize="34dp"
           android:textColor="@color/white"
           android:text="Important Date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/Tournament"
        android:layout_below="@+id/title"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Tournaments:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Tournament 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Tournament 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Tournament 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/practices"
        android:layout_below="@id/Tournament"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Practices:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Practice 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Practice 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Practice 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/practices"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CalendarView
            android:weekNumberColor="@color/white"
            android:selectedWeekBackgroundColor="@color/white"
            android:unfocusedMonthDateColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></CalendarView>
    </LinearLayout>

</RelativeLayout>
