<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.self.ludus.SignUp"
    tools:showIn="@layout/activity_sign_up"
    android:orientation="vertical"
    android:background="@drawable/background_black"
    android:gravity="top|center">

    <EditText
        style="@style/Widget.Group.Single"
        android:id="@+id/username_input"
        android:gravity="center"
        android:hint="@string/Username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        android:inputType="textPassword"
        style="@style/Widget.Group.Single"
        android:id="@+id/mPasswordInput"
        android:gravity="center"
        android:hint="@string/Password_Input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/email_input"
        style="@style/Widget.Group.Single"
        android:gravity="center"
        android:hint="@string/Email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        android:id="@+id/name_input"
        style="@style/Widget.Group.Single"
        android:gravity="center"
        android:hint="@string/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        android:id="@+id/phone_number_input"
        style="@style/Widget.Group.Single"
        android:gravity="center"
        android:hint="@string/Phone_Number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        style="@style/Widget.Group.Single"
        android:id="@+id/city"
        android:gravity="center"
        android:hint="@string/city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom"/>
    <EditText
        style="@style/Widget.Group.Single"
        android:id="@+id/sport_input"
        android:gravity="center"
        android:hint="@string/sport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height" />
    <RadioButton
        android:textColor="@color/white"
        android:id="@+id/student_signup"
        android:text="Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioButton
        android:textColor="@color/white"
        android:text="Coach"
        android:id="@+id/coach_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/mSubmitButton"
        android:text="Sign Up"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login"
        android:textColor="@color/white"
        android:clickable="true"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
