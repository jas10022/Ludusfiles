<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_add_new_binder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/addnew_binder"
            android:text="@string/Add_New_Binder"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_new_binder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/A_Binder_is_a_workspace_for_team_collaboration_and_communication"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btn_open_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/addnew_invite"
            android:text="@string/Add_Contacts_or_Teams"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_open_contacts"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/Open_contact_list_to_add_new_contacts_or_to_create_a_new_team"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

