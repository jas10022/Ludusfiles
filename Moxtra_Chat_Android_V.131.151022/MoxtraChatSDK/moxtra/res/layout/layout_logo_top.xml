<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/banner_moxtra_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_banner_logo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:layout_weight="1.0"
                android:gravity="left"
                android:scaleType="fitStart"
                android:src="@drawable/banner_moxtra_binder_logo" />

            <ImageView
                android:id="@+id/iv_banner_logo_sub"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_gravity="top|right"
                android:gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/banner_moxtra_meet_sub_logo"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_banner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Private_Group_Share"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/layout_custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:gravity="right" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/var/lib/jenkins/jobs/Build_2.9.2_Based_Chat_SDK/workspace/android/branches/2.9.2/resources/res/layout/layout_logo_top.xml -->